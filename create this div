<!DOCTYPE HTML>
<html lang="en-US">
<head>
	<meta charset="UTF-8">
	<title></title>
</head>
<body>
	<style type="text/css">
		#section{width:300px;height:300px;background:black;}
	</style>
	<div id="section">
	
	</div>
	<script type="text/javascript">
		var D=document.getElementById('section'),w=290,h=290;
		D.onclick=function(e){
			var e=window.event||e;
			var qwer=e.srcElement||e.target;
			if(qwer.nodeName.toLocaleLowerCase()==='div'){
				w-=20,h-=20;
				var Color=RandomColor();
				var D=document.createElement('div');
				D.style.cssText='background:'+Color+';width:'+w+'px;height:'+h+'px;';
				qwer.appendChild(D);
			}
		}
		
		function RandomColor(){
			var c='abcdef123456789',r='#';
			for(var i=0;i<6;i++){
				var o=Math.round(Math.random()*6);
				r+=c[o];
			}
			return r;
		}
	</script>
</body>
</html>
